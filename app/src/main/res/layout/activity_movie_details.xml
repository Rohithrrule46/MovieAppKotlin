<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.MovieDetailsActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:foreground="#AB090C10"
            android:foregroundTintMode="src_atop"
            android:src="@drawable/ic_launcher_background"/>

        <ImageView
            android:id="@+id/image_first"
            android:orientation="vertical"
            android:background="@color/accent"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_width="@dimen/_125sdp"
            android:elevation="8dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_160sdp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70sdp"
                android:fontFamily="@font/myfont"
                android:text="RELEASE DATE :"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:layout_below="@id/tv1"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/myfont" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMDB :"
                android:layout_below="@+id/tv_date"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/yellow"
                android:fontFamily="@font/myfont"
                />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_below="@id/tv2"
                android:textSize="@dimen/_24sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/myfont" />

            <ImageView
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_toRightOf="@+id/tv_status"
                android:src="@drawable/ic_star"
                android:layout_marginTop="6dp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_below="@id/tv2"
                android:foregroundTint="#86090C10"
                app:tint="@color/yellow"
                android:foregroundTintMode="src_in"/>

        </RelativeLayout>



    </FrameLayout>

    <TextView
        android:id="@+id/tv_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/myfont"
        android:paddingTop="5dp"
        android:text="Watchlists"
        android:textColor="@color/white"
        android:textSize="@dimen/_26sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_des_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_movie"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/myfont"
        android:paddingTop="5dp"
        android:text="Description :"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_des_title"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/myfont"
        android:paddingTop="5dp"
        android:text="Description :"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />


</RelativeLayout>