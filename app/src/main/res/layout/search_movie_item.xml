<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_125sdp"
    android:layout_height="@dimen/_240sdp"
    android:backgroundTint="@color/black"
    android:outlineSpotShadowColor="@color/yellow"
    android:outlineAmbientShadowColor="@color/yellow"
    android:elevation="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_240sdp"
        android:elevation="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/category_meal_card"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="@dimen/_180sdp"
            android:elevation="1dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="@dimen/_8sdp"
            >

            <ImageView
                android:id="@+id/img_category_meal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/accent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/movie_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_meal_card"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/myfont"
            android:text="Movie Name "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
